#!/usr/bin/env bash
set -eu -o pipefail

ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

(
  cd "${ROOT_DIR}"
  go install -v golang.org/x/tools/cmd/goimports
)

pushd "${ROOT_DIR}" > /dev/null 2>&1
  # shellcheck disable=SC2046
  goimports -w $(find "${ROOT_DIR}" -name '*.go' -and \( -not -path "${ROOT_DIR}/vendor/*" \))
popd > /dev/null 2>&1
